/*  Button Block  */

.btn-block { display: block; padding-left: 0; padding-right: 0 }

.btn { display: inline-block; padding: 8px 15px; border: 0; font-size: 12px; color: {{settings.btn_text_color}}; background-color: {{settings.btn_main_color}}; border-radius: 4px; transition: all 0.2s ease; }
.btn:hover { text-decoration: none; background-color: {{settings.btn_main_hover}}; }

.btn-return,
.btn-addresses,
.btn-new-adress { float: right; margin-top: 2px; }

