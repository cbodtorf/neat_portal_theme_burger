(function($) {

	$(document).ready(function() {

		// Slider section
		var $slider = $('.section-slider.owl-carousel');
		$slider.each(function() {
			var $this = $(this);
			var sliderData = JSON.parse(JSON.stringify($this.data('slide-options')))
			$this.owlCarousel({
				items: sliderData.items,
				loop: sliderData.loop,
				mouseDrag: sliderData.mouseDrag,
				touchDrag: sliderData.touchDrag,
				nav: sliderData.nav,
				dots: sliderData.dots,
				autoplay: sliderData.autoplay,
				animateOut: sliderData.animateOut
			})
		})
		
	})

})(jQuery)
