{%- assign _section  = section.settings -%}

{%- if _section.show_for == 'member' -%}
	{%- if customer -%}
		{%- assign show_section = true -%}
	{%- else -%}
		{%- assign show_section = false -%}
	{%- endif -%}
{%- else -%}
	{%- if customer -%}
		{%- assign show_section = false -%}
	{%- else -%}
		{%- assign show_section = true -%}
	{%- endif -%}
{%- endif -%}

{%- if show_section -%}
	<section class="section-outro" {% if _section.image != blank %} style="background-image: url('{{ _section.image | img_url: '2048x' }}')" {% endif %}>
		<div class="shell">
			<div class="section__inner">
				{%- if _section.title != blank -%}
					<h2 class="section__title">
						{{ _section.title }}
					</h2><!-- /.section__title -->
				{%- endif -%}

				{%- if _section.button_label != blank and _section.button_link != blank -%}
					<a href="{{ _section.button_link }}" class="btn">
						{{ _section.button_label }}
					</a>
				{%- endif -%}
			</div><!-- /.section__inner -->
		</div><!-- /.shell -->
	</section><!-- /.section-outro -->
{%- endif -%}

{% schema %}
{
	"name": "Outro",
	"settings": [
		{
			"type": "select",
			"id": "show_for",
			"label": "Show For",
			"options": [
		      {
		        "value": "member",
		        "label": "Member User"
		      },
		      {
		        "value": "new",
		        "label": "New User"
		      }
		    ],
		    "default":   "new"
		},
		{
			"type": "textarea",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "text",
			"id": "button_label",
			"label": "Button Label"
		},
		{
			"type": "url",
			"id": "button_link",
			"label": "Button Link"
		},
		{
			"type": "image_picker",
			"id": "image",
			"label": "Background Image",
			"info": "Recommended width: 2048px."
		}
	],
	"presets": [
		{
			"name": "Outro"
		}
	]
}
{% endschema %}
