<section class="section-about" {{ block.shopify_attributes }}>
    <div class="section__inner">
      {% if _section.title != blank %}
          <header class="section__head">
              <h2 style="font-size: {{ _section.header_size }}px;text-align: {{ _section.alignment }};">{{ _section.title }}</h2>
          </header><!-- /.section__head -->
      {% endif %}

      {% if _section.entry != blank %}
      <div class="section__body">
        {{ _section.entry }}
      </div><!-- /.section__body -->
			{% endif %}
    </div><!-- /.section__inner -->
</section><!-- /.section-story -->
