<section class="section-recharge" id="recharge-step-3">
  <div class="shell">
    <div class="section__inner">
      <header class="section__head">
        <h2>
          {{ _section.frequency_page_title }} <br>

          <span>{{ _section.frequency_page_product_count }}</span>
        </h2>

        <p>{{ _section.frequency_page_delivery_text }}</p>
      </header><!-- /.section__head -->

      <div class="section__body">
        <div class="radios">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'frequency' %}
                {% assign freq = block.settings %}
                <input
                  type="radio"
                  name="recharge-period"
                  id="period-{{ freq.frequency_interval }}"
                  {% if forloop.index == 2 %}
                  checked
                  {% endif %}
                >
            {% endcase %}
          {% endfor %}
        </div><!-- /.radios -->

        <div class="periods">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'frequency' %}
                {% assign freq = block.settings %}
                <div
                  class="period {% if forloop.index == 2 %}selected{% endif %}"
                  data-interval-frequency="{{ freq.frequency_interval }}"
                  data-interval-unit="weeks"
                >
                  <div class="period__inner">
                    <a href="#period-1" class="period__link"></a>

                    <div class="period__image">
                      <img src="{{ freq.image | img_url: '300x' }}" alt="" class="hidden-xs">
                      <img src="{{ freq.image | img_url: '300x' }}" alt="" class="visible-xs-block">
                    </div><!-- /.period__image -->

                    <div class="period__info">
                      <div class="period__title">
                        <h3>
                          {{ freq.title }}
                        </h3>
                      </div><!-- /.period__title -->

                      <div class="period__content">
                        <p>
                          {{ freq.frequency_description }}
                        </p>
                      </div><!-- /.period__content -->
                    </div><!-- /.period__info -->
                  </div><!-- /.period__inner -->
                </div><!-- /.period -->
            {% endcase %}
          {% endfor %}
        </div><!-- /.periods -->
      </div><!-- /.section__body -->
    </div><!-- /.section__inner -->

    <div class="section__actions">
      <button data-id="addSubscriptionToCart" type="submit" class="btn recharge-submit">{{ _section.frequency_page_btn_text }}</button>
    </div><!-- /.section__actions -->

    <footer class="section__foot">
      <p class="error_message">
        Please select period
      </p><!-- /.error_message -->

      <div class="rte">
        {{ _section.frequency_page_footer_text }}
      </div>
    </footer><!-- /.section__foot -->
  </div><!-- /.shell -->
</section><!-- /.section-recharge -->
